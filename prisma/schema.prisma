generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  name     String
  email    String
  password String
  id       Int    @id @default(autoincrement())
}

model customers {
  id        String     @id
  name      String
  email     String
  image_url String
  invoices  invoices[]
}

model invoices {
  customer_id String
  amount      Int
  date        DateTime
  status      String
  id          Int       @id @default(autoincrement())
  customer    customers @relation(fields: [customer_id], references: [id])
}

model revenue {
  month   String @id
  revenue Int
}

view invoicestatus {
  id      Int @unique
  paid    BigInt
  pending BigInt
}
